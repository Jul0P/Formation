<h1>Créer un anime</h1>

<form method="POST" action="/animes">
  <div>
    <label>Titre</label>
    <input type="text" name="title" required />
  </div>

  <div>
    <label>Description</label>
    <textarea name="description" rows="4" required></textarea>
  </div>

  <div>
    <label>Genre</label>
    <input type="text" name="genre" required placeholder="Action, Romance, Shonen..." />
  </div>

  <div>
    <label>Nombre d'épisodes</label>
    <input type="number" name="episodes" min="1" required />
  </div>

  <div>
    <label>Statut</label>
    <select name="status" required>
      <option value="">Sélectionner...</option>
      <option value="ongoing">En cours</option>
      <option value="completed">Terminé</option>
      <option value="upcoming">À venir</option>
    </select>
  </div>

  <div>
    <label>Rating (0-10)</label>
    <input type="number" name="rating" min="0" max="10" step="0.1" />
  </div>

  <div>
    <label>Année</label>
    <input type="number" name="year" />
  </div>

  <div>
    <button type="submit">Créer l'anime</button>
    <a href="/animes">Annuler</a>
  </div>
</form>
