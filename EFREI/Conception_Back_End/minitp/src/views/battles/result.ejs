<h2 style="margin-bottom: 1.5rem"><%= title %></h2>

<div class="card" style="background: hsl(0 0% 10%); color: white">
  <h3 style="margin-bottom: 0.5rem">Vainqueur : <%= result.winner.name %></h3>
  <div style="font-size: 0.875rem; opacity: 0.9">Niveau <%= result.winner.level %> • <%= result.winner.experience %>/10 XP</div>
</div>

<div class="card">
  <h3 style="margin-bottom: 0.5rem">Perdant : <%= result.loser.name %></h3>
  <div style="font-size: 0.875rem; color: hsl(0 0% 40%)">Niveau <%= result.loser.level %> • <%= result.loser.experience %>/10 XP</div>
</div>

<div class="card">
  <h3 style="margin-bottom: 1rem">Journal (<%= result.rounds %> rounds)</h3>
  <div style="background: hsl(0 0% 96%); padding: 1rem; border-radius: 0.375rem; max-height: 500px; overflow-y: auto; font-size: 0.875rem">
    <% result.log.forEach(entry => { %>
    <div style="padding: 0.25rem 0; border-bottom: 1px solid hsl(0 0% 90%)"><%= entry %></div>
    <% }); %>
  </div>
</div>

<div style="display: flex; gap: 0.5rem">
  <a href="/battles/new" class="btn">Nouveau combat</a>
  <a href="/trainers" class="btn">Dresseurs</a>
</div>
