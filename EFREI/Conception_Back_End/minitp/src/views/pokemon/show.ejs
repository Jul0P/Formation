<h2 style="margin-bottom: 1.5rem"><%= pokemon.name %></h2>

<div class="card">
  <div style="font-size: 0.875rem; color: hsl(0 0% 40%)">
    <div>ID <%= pokemon.id %></div>
    <div><%= pokemon.lifePoint %>/<%= pokemon.maxLifePoint %> PV • <%= Math.round(pokemon.getHealthPourcentage()) %>%</div>
    <div><%= pokemon.isAlive() ? 'En forme' : 'KO' %></div>
    <% if (pokemon.trainerId) { %>
    <div><a href="/trainers/<%= pokemon.trainerId %>" style="color: hsl(0 0% 10%)">Voir le dresseur →</a></div>
    <% } %>
  </div>
</div>

<div class="card">
  <h3 style="margin-bottom: 1rem">Attaques (<%= pokemon.getAttacks().length %>/4)</h3>
  <% if (pokemon.getAttacks().length === 0) { %>
  <p style="color: hsl(0 0% 40%); font-size: 0.875rem">Aucune attaque</p>
  <% } else { %>
  <div style="display: flex; flex-direction: column; gap: 0.5rem">
    <% pokemon.getAttacks().forEach(attack => { %>
    <div style="background: hsl(0 0% 96%); padding: 0.75rem; border-radius: 0.375rem">
      <div style="font-weight: 500; margin-bottom: 0.25rem"><%= attack.name %></div>
      <div style="font-size: 0.875rem; color: hsl(0 0% 40%)">
        <%= attack.damage %> dégâts • <%= attack.getRemainingUses() %>/<%= attack.usageLimit %> <%= attack.canBeUsed() ? '' : '(épuisée)' %>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>

<a href="/pokemon" class="btn">Retour</a>
