<h2 style="margin-bottom: 1.5rem">Pokémon</h2>

<div class="grid">
  <% pokemons.forEach(pokemon => { %>
  <div class="card">
    <h3 style="margin-bottom: 0.5rem"><%= pokemon.name %></h3>
    <div style="font-size: 0.875rem; color: hsl(0 0% 40%); margin-bottom: 1rem">
      <%= pokemon.lifePoint %>/<%= pokemon.maxLifePoint %> PV • <%= Math.round(pokemon.getHealthPourcentage()) %>%
      <div><%= pokemon.getAttacks().length %>/4 attaques</div>
    </div>
    <a href="/pokemon/<%= pokemon.id %>" class="btn">Voir</a>
  </div>
  <% }); %>
</div>

<% if (pokemons.length === 0) { %>
<div class="card">
  <p style="color: hsl(0 0% 40%); font-size: 0.875rem">Aucun Pokémon. Créez-en via l'API.</p>
  <pre style="background: hsl(0 0% 96%); padding: 1rem; border-radius: 0.375rem; margin-top: 1rem; font-size: 0.75rem; overflow-x: auto">
POST /api/pokemon
{ "name": "Pikachu", "lifePoint": 100, "trainerId": 1 }</pre
  >
</div>
<% } %>
